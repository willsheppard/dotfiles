[user]
    name = Will Sheppard
    email = nobody@example.com
[core]
    editor = vi
    # make colours get escaped properly
    pager = less -r
[alias]
    co = checkout
    st = status
[diff]
    # don't show a/ and b/ at the beginning of filepaths in diffs
    noprefix = true
[push]
    # Push to @{upstream} unless the name is different. See http://git-scm.com/docs/git-config
    default = simple
